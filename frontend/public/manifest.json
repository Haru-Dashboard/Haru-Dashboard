{
  "manifest_version": 3,
  "name": "Haru Dashboard",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png"
  },
  "description": "Haru dashboard for developers",
  "icons": {
    "16": "icon.png"
  },

  "author": "",
  "background": {
    "service_worker": "js/background.js"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"]
}
