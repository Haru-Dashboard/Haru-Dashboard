{
  "manifest_version": 3,
  "name": "Haru Dashboard",
  "version": "1.0",

  "action": {
    "default_icon": "icon16.png"
  },
  "description": "Haru dashboard for developers",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "author": "Haru",
  "background": {
    "service_worker": "js/background.js"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": ["geolocation"]
}
